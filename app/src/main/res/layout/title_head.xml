<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="50dp"
    android:background="@color/primary_dark"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        />
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:src="@drawable/mine"
        android:visibility="invisible"
        />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="轻聊"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="23sp"
            android:textStyle="bold"
            android:singleLine="true"
          />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_set_net"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/yellow"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_warn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/warn"
            />
        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/next"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_warn"
            android:layout_toLeftOf="@id/iv_go"
            android:gravity="center"
            android:textSize="17sp"
            android:text="@string/net_disconnect"
            />
        </RelativeLayout>

</LinearLayout>